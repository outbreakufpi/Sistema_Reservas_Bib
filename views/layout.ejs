<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Sistema de Reservas de Salas' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <% if (typeof user !== 'undefined') { %>
        <div class="sidebar">
            <h3>Sistema de Reservas</h3>
            <ul>
                <li><a href="/dashboard" class="<%= title === 'Dashboard' ? 'active' : '' %>">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a></li>
                <li><a href="/minhas-reservas" class="<%= title === 'Minhas Reservas' ? 'active' : '' %>">
                    <i class="fas fa-calendar-check"></i>
                    <span>Minhas Reservas</span>
                </a></li>
                <% if (user.tipo === 'admin') { %>
                    <li><a href="/admin/salas" class="<%= title === 'Gerenciar Salas' ? 'active' : '' %>">
                        <i class="fas fa-door-open"></i>
                        <span>Gerenciar Salas</span>
                    </a></li>
                    <li><a href="/admin/reservas" class="<%= title === 'Gerenciar Reservas' ? 'active' : '' %>">
                        <i class="fas fa-list"></i>
                        <span>Gerenciar Reservas</span>
                    </a></li>
                <% } %>
                <li><a href="/logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sair</span>
                </a></li>
            </ul>
        </div>

        <div class="main-content">
            <%- body %>
        </div>
    <% } else { %>
        <div class="main-content full-width">
            <%- body %>
        </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 